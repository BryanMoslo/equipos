<p id="notice"><%= notice %></p>

<div id="content" class="content container">
  <div class="action-buttons mb-3 d-flex justify-content-between align-items-center">
    <h4> Información de Parámetro</h4>

    <div>
      <%= link_to 'Regresar', parametros_path,class:"btn btn-info" %>
      <%= link_to 'Modificar', edit_parametro_path(@parametro),class:"btn btn-success" %>
    </div>
  </div>

  <table class="table">
    <thead class="">
      <tr>
        <th>Id</th>
        <th>Atributo</th>
        <th>Descripcion</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      <tr>
     		<td><%= @parametro.id %></td>
     		<td><%= @parametro.atributo %></td>
     		<td><%= @parametro.descripcion %></td>
        <td><%= @parametro.estadoParametro %></td>
     	</tr>
    </tbody>
  </table>

  <hr>

  <iframe id="valp" src="/valp/<%= @parametro.id %>" frameborder="0" style="border:0;width:100%;height:600px;" scrolling="no"></iframe>
</div>
