<!-- Modal -->
<div class="modal fade show" id="edituser" style="opacity: 1; display: block;" tabindex="-1" role="dialog" aria-labelledby="editUserLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_for @usuario do |f| %>
        <div class="modal-body">

            <% if @usuario.errors.any? %>
              <ul class="alert alert-danger" role="alert">
              <% @usuario.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            <% end %>

            <div class="d-flex flex-wrap">
              <div class="form-group col-md-6">
                <%= f.label "Usuario" %>
                <%= f.text_field :usuario, class: "form-control", placeholder: "Usuario", required: true %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label "Password" %>
                <%= f.password_field :password, class:"form-control", placeholder: "Password", required: true %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label 'Rol' %>
                <%= collection_select("usuario", :idrol, obtener_opciones("IdRol"), :id, :valor, {selected: @usuario.idrol}, class: "form-control" ) %>
              </div>

              <div class="form-group col-md-6">
                <%= f.label 'Estado' %>
                <%= collection_select("usuario", :idestadousuario, obtener_opciones("IdEstadoUsuario"), :id, :valor, {selected: @usuario.idestadousuario}, class: "form-control" ) %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Mostrar", usuario_path(@usuario.id), class: "btn btn-warning" %>
          <%= link_to "Regresar", usuarios_path, class: "btn btn-info" %>
          <%= f.submit "Guardar", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
